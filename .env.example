# todosArena Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Private key for deploying contracts (without 0x prefix)
# WARNING: Never commit your actual private key!
PRIVATE_KEY=your_private_key_here

# RPC URLs for networks
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Contract addresses (update after deployment)
VITE_TODOS_ARENA_ADDRESS=0x0000000000000000000000000000000000000000

# Network chain ID (11155111 for Sepolia, 1 for Mainnet)
VITE_CHAIN_ID=11155111

# TodosArena unified contract ABI
VITE_TODOS_ARENA_ABI=[]

# ===========================================
# AI CONFIGURATION (GEMINI)
# ===========================================

# Google Gemini API Key for AI winner detection
GEMINI_API_KEY=your_gemini_api_key

# AI Detection Service URL (if using separate backend)
VITE_AI_SERVICE_URL=http://localhost:3001/api/detect

# ===========================================
# GEOLOCATION (for outdoor games)
# ===========================================

# Google Maps API Key (for location-based features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Maximum distance in km for nearby outdoor games
VITE_MAX_DISTANCE_KM=50
